-- LocalScript: Tạo GUI để dán script và thực thi

local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Tạo ScreenGui để chứa các thành phần UI
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = playerGui

-- Tạo TextBox để dán script
local scriptBox = Instance.new("TextBox")
scriptBox.Size = UDim2.new(0, 400, 0, 200)
scriptBox.Position = UDim2.new(0.5, -200, 0.3, 0)  -- Đặt ở giữa màn hình
scriptBox.PlaceholderText = "Dán script vào đây"
scriptBox.Multiline = true
scriptBox.TextSize = 14
scriptBox.Parent = screenGui

-- Tạo nút để thực thi script
local executeButton = Instance.new("TextButton")
executeButton.Size = UDim2.new(0, 200, 0, 50)
executeButton.Position = UDim2.new(0.5, -100, 0.6, 0)  -- Đặt dưới TextBox
executeButton.Text = "Thực thi script"
executeButton.Parent = screenGui

-- Hàm để thực thi script dán vào
local function executeScript(scriptText)
    -- Kiểm tra nếu script không trống
    if scriptText ~= "" then
        local func, err = loadstring(scriptText)  -- Dùng loadstring để tải script
        if func then
            -- Nếu không có lỗi, thực thi script
            pcall(func)
        else
            -- Nếu có lỗi, hiển thị lỗi
            print("Lỗi khi thực thi script: " .. err)
        end
    else
        print("Không có script để thực thi!")
    end
end

-- Kết nối sự kiện khi người chơi nhấn nút
executeButton.MouseButton1Click:Connect(function()
    local scriptText = scriptBox.Text
    executeScript(scriptText)  -- Thực thi script đã dán vào
    scriptBox.Text = ""  -- Xóa TextBox sau khi thực thi script
end)
